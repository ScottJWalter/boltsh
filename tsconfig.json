{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "pretty": true,
    "rootDirs": [
      "./src"
    ],
    "strict": true,
    "target": "es2017",
    "composite": true,
    "sourceMap": true,
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
  },
  "include": [
    "./src/**/*.ts"
  ]
}
